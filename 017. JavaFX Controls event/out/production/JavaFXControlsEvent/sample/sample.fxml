<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <TextField fx:id="textField1" GridPane.columnIndex="0" GridPane.rowIndex="0" onKeyReleased="#textField1Empty"></TextField>
    <Button fx:id="button1" text="Button 1" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#button1Press"></Button>
    <CheckBox fx:id="checkBox1" text="Clear textField1 after pressing button1" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#checkBox1Checked"></CheckBox>
    <Label fx:id="label1" text="Label1 text" GridPane.columnIndex="1" GridPane.rowIndex="1"></Label>

</GridPane>